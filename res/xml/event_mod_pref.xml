<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Detail" >
        <org.evswork.whatsdonetoday.DatePickerPreference
            android:key="pref_date"
            android:persistent="false"
            android:title="Date" />
        <org.evswork.whatsdonetoday.TimePickerPreference
            android:key="pref_time"
            android:persistent="false"
            android:title="Time" />
        <org.evswork.whatsdonetoday.EditTextPreference
            android:key="pref_worth"
            android:persistent="false"
            android:title="Worth" />
        <org.evswork.whatsdonetoday.TagSelectListPreference
            android:key="pref_tag"
            android:persistent="false"
            android:title="Tags" />
        <org.evswork.whatsdonetoday.EditTextPreference
            android:key="pref_descript"
            android:persistent="false"
            android:title="Description" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Control" >
        <Preference
            android:key="pref_ok"
            android:persistent="false"
            android:title="OK" />
        <Preference
            android:key="pref_cancel"
            android:persistent="false"
            android:title="Cancel" />
    </PreferenceCategory>

</PreferenceScreen>